{
  "name": "adb-dummy-app",
  "version": "1.0.0",
  "description": "Portable Electron dummy app to connect to a single ADB device and list installed launchable packages.",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^28.3.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.scrcpy.dummy.app",
    "productName": "ADB Dummy App",
    "files": [
      "**/*",
      "!reference/**"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
